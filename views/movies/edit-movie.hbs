<form action="/movie/{{movie._id}}/edit" method="POST">

    <label for="title">Title:</label>
    <input type="text" name="title" value="{{movie.title}}" id="title">

    <label for="genre">Genre:</label>
    <input type="text" name="genre" value="{{movie.genre}}" id="genre">

    <label for="plot">Plot:</label>
    <input type="text" name="plot" value="{{movie.plot}}" id="plot">

    <label for="cast">Cast</label>
    <select name="cast" id="cast" multiple>
        {{#each allCelebrities}}
        {{#if isInCast}}
        <option value="{{this._id}}" selected="selected">{{this.name}}</option>
        {{else}}
        <option value="{{this._id}}">{{this.name}}</option>
        {{/if}}
        {{/each}}
    </select>
    <button type="submit">Save</button>

</form>